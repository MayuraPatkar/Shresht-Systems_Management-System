{
  "name": "shresht-systems-management-system",
  "version": "3.6.0",
  "description": "Software for Shresht systems",
  "main": "dist/main.js",
  "scripts": {
    "dev:css": "tailwindcss -i ./public/css/input.css -o ./public/css/tailwind.css --watch",
    "dev:ts": "tsc --watch",
    "dev:electron": "wait-on dist/main.js && electron .",
    "dev": "concurrently -k -s none --names \"TS,CSS,APP\" -c \"blue,yellow,magenta\" \"npm run dev:ts\" \"npm run dev:css\" \"npm run dev:electron\"",
    "build:ts": "tsc",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/tailwind.css --minify",
    "build": "npm run build:css && npm run build:ts",
    "electron": "npm run build && electron .",
    "start": "node dist/server.js",
    "test": "vitest",
    "backup": "node dist/utils/backup.js",
    "migrate": "node dist/utils/migrate.js",
    "logs": "tail -f logs/app.log",
    "clean": "rimraf dist logs uploads backups"
  },
  "keywords": [],
  "author": "Mayura Patkar, Souvik Poddar",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "moment": "^2.30.1",
    "mongoose": "^9.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "puppeteer": "^24.31.0",
    "winston": "^3.18.3"
  },
  "optionalDependencies": {
    "keytar": "npm:null@^7.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MayuraPatkar/Shresht-Systems_Management-System.git"
  },
  "bugs": {
    "url": "https://github.com/MayuraPatkar/Shresht-Systems_Management-System/issues"
  },
  "homepage": "https://github.com/MayuraPatkar/Shresht-Systems_Management-System#readme",
  "build": {
    "appId": "com.app.SSMS",
    "productName": "SSMS",
    "asar": true,
    "asarUnpack": [
      "node_modules/mongoose/**/*",
      "node_modules/mongodb/**/*",
      "node_modules/@mongodb-js/**/*",
      "node_modules/bson/**/*",
      "node_modules/bcryptjs/**/*",
      "node_modules/puppeteer/**/*",
      "node_modules/puppeteer-core/**/*",
      "node_modules/@puppeteer/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "public/assets"
    },
    "files": [
      "**/*",
      "!backups/**",
      "!logs/**",
      "!uploads/**",
      "!.git/**",
      "!node_modules/**/.cache",
      "!dist/**",
      "!**/*.md",
      "!.github/**",
      "!.env",
      "!.env.*",
      "!.port-cache"
    ],
    "extraResources": [
      {
        "from": "public/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "icon": "./public/assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "MayuraPatkar",
      "repo": "Shresht-Systems_Management-System",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}
