{
  "name": "shresht-systems-management-system",
  "version": "3.4.1",
  "description": "Software for Shresht systems",
  "main": "main.js",
  "scripts": {
    "start": "npm run build-css-prod && electron .",
    "dev": "NODE_ENV=development electron .",
    "server": "node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "backup": "node utils/backup.js",
    "clean": "rm -rf dist/ logs/ uploads/ backups/",
    "build-css": "tailwindcss -i ./public/css/input.css -o ./public/css/tailwind.css --watch",
    "build-css-prod": "tailwindcss -i ./public/css/input.css -o ./public/css/tailwind.css --minify",
    "migrate": "node src/utils/migrate.js",
    "logs": "tail -f logs/app.log",
    "build": "electron-builder --win",
    "build:publish": "electron-builder --win --publish always",
    "release": "npm run build-css-prod && electron-builder --win --publish always"
  },
  "keywords": [],
  "author": "Mayura Patkar, Souvik Poddar",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "moment": "^2.30.1",
    "mongoose": "^9.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "puppeteer": "^24.31.0",
    "winston": "^3.18.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mayura01/shresht-systems-management-system.git"
  },
  "bugs": {
    "url": "https://github.com/mayura01/shresht-systems-management-system/issues"
  },
  "homepage": "https://github.com/mayura01/shresht-systems-management-system#readme",
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "target": "nsis"
  },
  "build": {
    "appId": "com.app.SSMS",
    "productName": "SSMS",
    "asar": true,
    "asarUnpack": [
      "node_modules/mongoose/**/*",
      "node_modules/mongodb/**/*",
      "node_modules/@mongodb-js/**/*",
      "node_modules/bson/**/*",
      "node_modules/bcryptjs/**/*",
      "node_modules/puppeteer/**/*",
      "node_modules/puppeteer-core/**/*",
      "node_modules/@puppeteer/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "public/assets"
    },
    "files": [
      "**/*",
      "!backups/**",
      "!logs/**",
      "!uploads/**",
      "!.git/**",
      "!node_modules/**/.cache",
      "!dist/**",
      "!**/*.md",
      "!.github/**",
      "!.env",
      "!.env.*",
      "!.port-cache"
    ],
    "extraResources": [
      {
        "from": "public/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "./public/assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "MayuraPatkar",
      "repo": "Shresht-Systems_Management-System",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4.1.17"
  }
}